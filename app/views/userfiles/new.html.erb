<h1>Upload New document</h1>
<%= form_for([@user, @mycontact, @meeting, @userfile], :html => {:multipart => true, :role => "form"}) do |f| %>
  <% if @userfile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@userfile.errors.count, "error") %> prohibited this userfile from being saved:</h2>

      <ul>
      <% @userfile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.file_field :doc %>
  </div>

  <div class="actions">
    <%= f.submit "Upload", :class => "btn btn-lg btn-primary " %>
  </div>
<% end %>
