<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Contact Info</h1>
    </div>

    <div class="form-group">
      <%= form_for([@user, @mycontact]) do |f| %>
        <% if @mycontact.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@mycontact.errors.count, "error") %> prohibited this mycontact from being saved:</h2>

            <ul>
            <% @mycontact.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="field" class="form-group">
          <%= f.label :first_name, "First Name:" %><br>
          <%= f.text_field :first_name, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :last_name, "Last Name:" %><br>
          <%= f.text_field :last_name, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :email_business, "Email:" %><br>
          <%= f.text_field :email_business, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :email_personal, "Email(alt):" %><br>
          <%= f.text_field :email_personal, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :phone_number, "Business Phone"%><br>
          <%= f.text_field :phone_number, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :phone_number_2, "Cell Phone"%><br>
          <%= f.text_field :phone_number_2, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :address, "Address" %><br>
          <%= f.text_field :address, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :address2, "Address2" %><br>
          <%= f.text_field :address2, class: "form-control", :autofocus => true %>
        </div>
          <div class="field">
          <%= f.label :city, "City"%><br>
          <%= f.text_field :city, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :state, "State"%><br>
          <%= f.text_field :state, class: "form-control", :autofocus => true %>
        </div>
        <div class="field">
          <%= f.label :zip, "Zip"%><br>
          <%= f.text_field :zip, class: "form-control", :autofocus => true %>
        </div>
        <div class="actions">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</div>

